                "title": "Name",
                "type": "string",
                "required": true,
                "minLength": 1,
                "placeholder": "name"
            },
            "type": {
                "title": "Type",
                "type": "string",
                "required": true,
                "placeholder": "lightbulb",
                "oneOf": [
                    {
                        "title": "Lightbulb",
                        "enum": [
                            "lightbulb"
                        ]
                    },
                    {
                        "title": "Air Conditiner",
                        "enum": [
                            "airConditioner"
                        ]
                    }
                ]
            },
            "room_name": {
                "title": "Room Name",
                "type": "string",
                "required": false,
                "placeholder": "master",
                "oneOf": [
                    {
                        "title": "Master",
                        "enum": [
                            "master"
                        ]
                    },
                    {
                        "title": "Living",
                        "enum": [
                            "living"
                        ]
                    },
                    {
                        "title": "Kitchen",
                        "enum": [
                            "kitchen"
                        ]
                    },
                    {
                        "title": "Guest",
                        "enum": [
                            "guest"
                        ]
                    }
                ]
            }
        }
    },
    "layout": [
        "name",
        "type",
        "room_name"
    ]
}